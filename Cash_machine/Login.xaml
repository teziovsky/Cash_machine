<Window x:Class="Cash_machine.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cash_machine"
        WindowStartupLocation="CenterScreen"
        Title="Okno Logowania" Height="350" Width="400" WindowStyle="ThreeDBorderWindow" Background="#2e3137">
    <Border Background="#2e3137" Margin="0" Padding="10">
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Numer karty" Foreground="White" />
            <TextBox Name="textCardnumber" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Label Content="PIN Karty" Foreground="White" />
            <PasswordBox Name="textPassword" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Button Name="Submit" Click="Submit_Click" Content="Zaloguj" Margin="70 20 70 0" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Button Name="info" Click="Info_Click" Content="?" Margin="295 -28 0 0" Background="#545d6a" Foreground="white" FontSize="14"/>
        </StackPanel>
    </Border>
</Window>