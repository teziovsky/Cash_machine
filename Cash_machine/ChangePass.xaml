<Window x:Class="Cash_machine.ChangePass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cash_machine"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Zmiana kodu PIN" Height="350" Width="400" Background="#2e3137">
    <StackPanel Margin="70">
        <Label Content="Nowy kod PIN" Foreground="White" />
        <PasswordBox Name="textNewPassword" Background="#545d6a" Foreground="white" FontSize="18"/>
        <Label Content="Powtórz kowy kod PIN" Foreground="White" />
        <PasswordBox Name="textNew1Password" Background="#545d6a" Foreground="white" FontSize="18"/>
        <Button Name="Changepass" Click="Changepass_Click" Content="Zmień kod PIN" Margin="50 10 50 5" Background="#545d6a" Foreground="white" FontSize="18"/>
    </StackPanel>
</Window>
