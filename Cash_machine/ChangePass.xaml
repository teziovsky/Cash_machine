<Window x:Class="Cash_machine.ChangePass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cash_machine"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Zmiana kodu PIN" Height="350" Width="400" Background="#2e3137">
    <Border Background="#2e3137" Margin="0" Padding="10">
        <StackPanel Margin="20">
            <Label Content="Zmiana kodu PIN:" Foreground="White" FontSize="25" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <Separator></Separator>
            <Label Content="Nowy kod PIN" Foreground="White" Margin="0 10 0 0"/>
            <PasswordBox Name="textNewPassword" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Label Content="Powtórz kowy kod PIN" Foreground="White" />
            <PasswordBox Name="textNew1Password" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Button Name="Changepass" Click="Changepass_Click" Content="Zmień kod PIN" Margin="70 15 70 0" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Button Name="Back" Click="Back_Click" Content="Powrót" Margin="70 5 70 0" Background="#545d6a" Foreground="white" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
