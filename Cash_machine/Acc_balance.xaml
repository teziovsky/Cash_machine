<Window x:Class="Cash_machine.Acc_balance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cash_machine"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Stan konta" Height="350" Width="400" Background="#2e3137">
    <Border Background="#2e3137" Margin="0" Padding="10">
        <StackPanel Margin="20">
            <Label Content="Twój stan konta wynosi:" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <TextBox Name="balance" Background="#545d6a" Foreground="white" FontSize="18" IsReadOnly="true" Width="335" TextAlignment="Center" Margin="0 20 0 0"/>
            <Button Name="Back" Click="Back_Click" Content="Powrót" Margin="70 122 70 0 " Background="#545d6a" Foreground="white" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
